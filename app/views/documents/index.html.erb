<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New Document", new_property_document_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Name</th>
         <th>Download Link</th>
         <th> </th>
      </tr>
   </thead>
   
   <tbody>
      <% @documents.each do |document| %>
         
         <tr>
            <td><%= document.name %></td>
            <td><%= link_to "Download File", document.attachment_url %></td>
         	<td><%= link_to 'Delete', property_document_path(@property, document), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure that you wish to delete #{document.name}?"} %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
<h3><%= link_to 'Back', property_path(@property) %></h3>