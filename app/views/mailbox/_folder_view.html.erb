<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
      <%= link_to "New message", new_conversation_path, class: "btn btn-info", style: "margin-bottom:2%" %>
    <div class="panel panel-default">
      <div class="panel-body">
        <% if is_conversation %>
          <%= render 'conversations/form' %>
        <% else %>
          <%= render partial: 'conversations/conversation', collection: messages %> 
        <% end %>
      </div>
    </div>
  </div>
</div>